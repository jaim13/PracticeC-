{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Compilar C++ con g++",
		"type": "shell",
		"command": "g++",
		"args": [
		  "-g",
		  "${file}",
		  "-o",
		  "${fileDirname}\\${fileBasenameNoExtension}.exe"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Compilando archivo C++ usando g++"
	  }
	]
  }
  